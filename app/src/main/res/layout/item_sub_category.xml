<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card_sub_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_value_5"
        app:cardElevation="@dimen/dim_value_5"
        app:cardCornerRadius="@dimen/dim_value_5"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_txt_video_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:layout_margin="@dimen/dim_value_5"
                android:layout_gravity="center"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/item_txt_video_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_videocam_black_24dp"
                android:layout_margin="@dimen/dim_value_5"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>