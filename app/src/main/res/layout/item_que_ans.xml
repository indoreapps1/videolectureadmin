<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dim_value_5"
    app:cardElevation="@dimen/dim_value_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_view_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_txt_que"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingLeft="@dimen/dim_value_5"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_inner_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_value_10">

        </android.support.v7.widget.RecyclerView>

        <EditText
            android:id="@+id/item_edt_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_value_5"
            android:background="@drawable/round_green"
            android:hint="Write your suggestion here"
            android:padding="@dimen/dim_value_5"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_txt_ques_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".7"
                android:gravity="left"
                android:paddingLeft="@dimen/dim_value_5"
                android:textColor="@color/colorBlack"
                android:textSize="10sp" />

            <Button
                android:id="@+id/item_btn_submit"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_value_40"
                android:layout_gravity="end|center"
                android:layout_marginTop="@dimen/dim_value_5"
                android:layout_marginBottom="@dimen/dim_value_10"
                android:layout_weight=".3"
                android:background="@drawable/login_btn_drawable"
                android:gravity="center"
                android:text="Upload Ans"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>