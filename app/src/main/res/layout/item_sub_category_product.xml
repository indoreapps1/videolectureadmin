<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_card_sub_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_value_60"
        android:layout_margin="@dimen/dim_value_5"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/dim_value_5"
        app:cardElevation="@dimen/dim_value_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_txt_video_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dim_value_5"
                android:layout_weight="0.7"
                android:gravity="center|left"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_txt_video_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dim_value_5"
                android:layout_weight="0.1"
                android:drawableLeft="@drawable/ic_videocam_black_24dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dim_value_5"
                android:layout_weight="0.1"
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dim_value_5"
                android:layout_weight="0.1"
                android:drawableLeft="@drawable/ic_clear_black_24dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>