<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_value_10"
            android:layout_marginTop="@dimen/dim_value_10"
            android:gravity="center|left"
            android:text="Product Management"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/dim_value_10"
            app:srcCompat="@android:drawable/ic_input_add" />
    </RelativeLayout>


    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="180dp">

    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_value_5">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:paddingLeft="@dimen/dim_value_5"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/txt_title"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingRight="@dimen/dim_value_5"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

    </RelativeLayout>

    <com.example.videolectureadmin.utilities.ExpandableTextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_value_5"
        android:layout_marginBottom="@dimen/dim_value_5"
        android:gravity="left"
        android:textColor="@color/colorBlack"
        android:textSize="12sp" />
</LinearLayout>