<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_category_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_value_5"
        android:layout_marginTop="@dimen/dim_value_10"
        android:layout_marginRight="@dimen/dim_value_5"
        android:layout_marginBottom="@dimen/dim_value_10"
        android:background="@color/colorWhite"
        app:cardElevation="@dimen/dim_value_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dim_value_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_category_img"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/item_category_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_value_40"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_value_40"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tv_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@color/colorSecondary"
                    android:gravity="center"
                    android:text="Edit"
                    android:layout_marginRight="@dimen/dim_value_2"
                    android:textColor="@color/colorGreen"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tv_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@color/colorSecondary"
                    android:gravity="center"
                    android:text="Delete"
                    android:layout_marginLeft="@dimen/dim_value_2"
                    android:textColor="@color/colorRed"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>