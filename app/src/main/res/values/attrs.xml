<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--for custom CircularImageView-->
    <declare-styleable name="CircularImageView">
        <attr name="border_circular" format="boolean" />
        <!-- <attr name="border_width" format="dimension"></attr> <attr name="border_color" format="color"></attr> -->
        <attr name="shadow_circular" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="circularImageViewStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width_circular" format="dimension" />
        <attr name="border_color_circular" format="color" />
    </declare-styleable>
</resources>